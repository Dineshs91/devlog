{
    "name": "devlog",
    "version": "0.0.1",
    "description": "A log book for developers",
    "repository": "https://github.com/Dineshs91/devlog",
    "license": "",
    "main": "app/index.html",
    "devDependencies": {
        "bower": "^1.3.1",
        "nodewebkit": "~0.11.6",
        "karma": "^0.12.16",
        "karma-jasmine": "~0.1.5",
        "karma-nodewebkit-launcher": "https://github.com/nDmitry/karma-nodewebkit-launcher/tarball/master",
        "protractor": "~1.0.0",
        "nedb": "~1.1.1",
        "grunt": "^0.4.5",
        "lodash": "~2.4.1",
        "tar.gz": "~0.1.1",
        "unzip": "~0.1.9"
    },
    "scripts": {
        "setup": "grunt setup",
        "postinstall": "bower install",
        "preupdate-webdriver": "npm install",
        "update-webdriver": "webdriver-manager update",
        "e2e": "protractor test/protractor-conf.js",
        "pree2e": "npm run update-webdriver && npm run setup",
        "unittest": "node node_modules/karma/bin/karma start test/karma.conf.js",
        "unittest-single-run": "node_modules/karma/bin/karma start test/karma.conf.js --single-run --log-level=debug"
    }
}